<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android">
    <slide
        android:duration="800"
        android:interpolator="@android:interpolator/decelerate_cubic"
        android:slideEdge="bottom">
        <targets>
            <target android:targetId="@id/inputs_container"/>
            <!--<target android:excludeId="@id/progress_bar"/>-->
        </targets>
    </slide>
    <fade android:startDelay="500">
        <targets>
            <target android:targetId="@id/text_loading"/>
            <target android:targetId="@id/toolbar"/>
            <target android:targetId="@id/progress_bar"/>
            <target android:targetId="@id/inputs_container"/>
            <target android:targetId="@id/avatar_edit_button"/>
        </targets>
    </fade>
</transitionSet>